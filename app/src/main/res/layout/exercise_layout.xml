<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    >

    <TextView
        android:id="@+id/exercise_name_display"
        android:layout_width="1px"
        android:layout_height="10mm"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="60"
        />

    <TextView
        android:id="@+id/exerise_rom_display"
        android:layout_width="1px"
        android:layout_height="10mm"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/exercise_name_display"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="20"/>

    <Button
        android:text="@string/edit_exercise_button"
        android:id="@+id/edit_exercise_button"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exerise_rom_display"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="20"
        />
</LinearLayout>